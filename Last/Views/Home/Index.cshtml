@model IEnumerable<Last.Models.Category>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>مرحبا بك عزيزي الزائر</h1>
    <p >مرحبا بك في موقع التوظيف بمختلف الاصناف يمكنك نشر الوظيفة ان كنت ناشرا و يمكنك التقدم الي وظيفة ان كنت باحثا </p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">المزيد من التفاصيل &raquo;</a></p>
</div>

    @foreach (var item in Model)

    {
        <div class="panel panel-default"style="padding:15px">
            <h1 class="panel-heading">@Html.DisplayFor(modelitem => item.CategoryName)</h1>
            <h1>@Html.DisplayFor(modelitem => item.CategoryDescription)</h1>
            <div class="row">
                @foreach (var sub in item.jobs)
                {
                    <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:30px;height:380px">
                        <img src="~/Uploads/@sub.jobImage" />
                        <h3>@Html.DisplayFor(modelItem => sub.jobName)</h3>
                        <h5>@Html.DisplayFor(modelItem => sub.jobContent)</h5>
                        @Html.ActionLink("تفاصيل", "Details", new { JobId = sub.Id },new {@class="btn btn-primary" })
                    </div>
                }
            </div>
        </div>
    }


      